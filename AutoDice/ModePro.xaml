<Controls:MetroWindow  x:Class="AutoDice.ModePro"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                       xmlns:sparrowToolkit="http://sparrowtoolkit.codeplex.com/wpf"
                       BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="1"
                       Title="AutoDice: [Username] [Advanced Mode]" TitleCaps="False"
                       Width="1200" MinWidth="960" Height="675" MinHeight="322"
                       ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen"
                       Loaded="MetroWindow_Loaded">
    <Controls:MetroWindow.TaskbarItemInfo>
        <TaskbarItemInfo/>
    </Controls:MetroWindow.TaskbarItemInfo>
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button x:Name="btnLoadSave" ToolTip="Load / Save" Click="btnLoadSave_Click">
                <Rectangle Width="18" Height="18"
                           Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                                     Visual="{DynamicResource appbar_disk}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <Button x:Name="btnTip" ToolTip="Send Tip" Click="btnTip_Click">
                <Rectangle Width="16.3" Height="18"
                           Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                                     Visual="{DynamicResource appbar_money}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <Button x:Name="btnNormalMode" ToolTip="Back to Normal Mode" Click="btnNormalMode_Click">
                <Rectangle Width="17" Height="18"
                           Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                                     Visual="{DynamicResource appbar_camera_flash_off}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <Button x:Name="btnSettings" ToolTip="Settings" Click="btnSettings_Click">
                <Rectangle Width="18" Height="18"
                           Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                                     Visual="{DynamicResource appbar_settings}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <Button x:Name="btnAbout" ToolTip="About..." Click="btnAbout_Click">
                <Rectangle Width="11.5" Height="18"
                           Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                                     Visual="{DynamicResource appbar_question}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>
            <Controls:Flyout x:Name="FlyoutLoadSave" Position="Top" Height="70" Width="350" Theme="Inverse">
                <Grid>
                    <Button ToolTip="Load Strategie" Style="{DynamicResource MetroCircleButtonStyle}" Width="50" Height="50" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Click="BtnLoadStrategie_Click">
                        <Rectangle Width="20" Margin="3,2,0,0"
                               Height="20"
                               Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill"
                                         Visual="{DynamicResource appbar_disk_load}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                    <Button ToolTip="Save Strategie" Style="{DynamicResource MetroCircleButtonStyle}" Width="50" Height="50" HorizontalAlignment="Left" Margin="70,10,0,0" VerticalAlignment="Top" Click="BtnSaveStrategie_Click">
                        <Rectangle Width="20"
                               Height="20" Margin="3,2,0,0"
                               Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill"
                                         Visual="{DynamicResource appbar_disk_save}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                    <Button ToolTip="Load from Strat Database" Style="{DynamicResource MetroCircleButtonStyle}" Width="50" Height="50" HorizontalAlignment="Left" Margin="140,10,0,0" VerticalAlignment="Top" Click="CloudLoad_Click">
                        <Rectangle Width="25" Margin="0" Height="13"
                               Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill"
                                         Visual="{DynamicResource appbar_cloud_download}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                    <Button ToolTip="Upload to Strat Database" Style="{DynamicResource MetroCircleButtonStyle}" Width="50" Height="50" HorizontalAlignment="Left" Margin="210,10,0,0" VerticalAlignment="Top" Click="CloudUpload_Click">
                        <Rectangle Width="25" Margin="0" Height="13"
                               Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill"
                                         Visual="{DynamicResource appbar_cloud_upload}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Button>
                </Grid>
            </Controls:Flyout>
            <Controls:Flyout x:Name="FlyoutProcessExecution" IsPinned="True" Position="Bottom" Height="70" Width="400" Theme="Inverse">
                <Grid>
                    <Controls:TransitioningContentControl x:Name="lblStatusTip" Margin="0,10,0,0"
                                                  Transition="Right" HorizontalContentAlignment="Left" VerticalAlignment="Top" FontSize="20" />
                    <Controls:MetroProgressBar Foreground="{DynamicResource AccentColorBrush}" x:Name="ProgressTip" Margin="0,0,0,10" VerticalAlignment="Bottom" Height="13" />
                </Grid>
            </Controls:Flyout>
            <Controls:Flyout x:Name="FlyoutTip" Header="Tip" IsPinned="False" Position="Right" Height="280" Width="310" Theme="Inverse">
                <Grid>
                    <Label x:Name="lblTipMessage" Content="You don't have enough balance!" Visibility="Hidden"
                           HorizontalAlignment="Left" Margin="0,56,0,0" VerticalAlignment="Top" FontSize="16"
                           FontFamily="Segoe UI Semibold" Width="299" HorizontalContentAlignment="Center" />
                    <Label x:Name="lblTipAmount" Content="Amount:" HorizontalAlignment="Left" Margin="15,13,0,0"
                           VerticalAlignment="Top" />
                    <Controls:NumericUpDown x:Name="numAmountTip" Minimum="0.00000001" Maximum="0.1"
                                            Interval="0.00000001" StringFormat="0.00000000" Value="0.00000001"
                                            Margin="75,13,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="172" />
                    <Label x:Name="lblTipPayee" Content="Payee:" HorizontalAlignment="Left" Margin="26,57,0,0"
                           VerticalAlignment="Top" />
                    <TextBox x:Name="txtPayee" HorizontalAlignment="Left" Height="23" Margin="75,57,0,0"
                             TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100" TextChanged="txtPayee_TextChanged" />
                    <Button x:Name="btnDonateMe" Content="Donate me" Margin="203,58,0,0" VerticalAlignment="Top"
                            HorizontalAlignment="Left" Width="75" Click="btnDonateMe_Click" />
                    <Label x:Name="lblOrDonateMe" Content="or" Margin="0,56,111,0" VerticalAlignment="Top"
                           HorizontalAlignment="Right" Width="21" />
                    <Button x:Name="btnSendTip" Content="Send tip!" IsEnabled="False" Margin="75,116,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="181" Click="btnSendTip_Click"/>
                    <Label x:Name="lblBtc" Content="BTC" HorizontalAlignment="Left" Margin="252,13,0,0"
                           VerticalAlignment="Top" />
                </Grid>
            </Controls:Flyout>
            <Controls:Flyout x:Name="flyoutAbout" IsPinned="False" Header="About" Position="Right" Width="250" Height="280"
                             Theme="Inverse">
                <Grid>
                    <Label x:Name="lblVersion" Margin="10,150,10,0" FontSize="14"
                           VerticalAlignment="Top" HorizontalContentAlignment="Center" />
                    <Image x:Name="logoBlack" Margin="26,0,27,0" Source="logo.png" Stretch="Fill" Height="140"
                           VerticalAlignment="Top"/>
                    <Image x:Name="logoWhite" Margin="26,0,27,0" Source="logo_white.png" Stretch="Fill" Height="140"
                           VerticalAlignment="Top"/>
                </Grid>
            </Controls:Flyout>
            <Controls:Flyout x:Name="flyoutSettings" Header="Settings" Position="Right" Width="384" Height="280" Theme="Inverse">
                <Grid>
                    <Label Content="Theme: " Margin="73,20,238,0" FontSize="14.667" VerticalAlignment="Top"
                           FontFamily="Segoe UI Semibold" />
                    <Label Content="Accent: " Margin="73,67,238,0" FontSize="14.667" VerticalAlignment="Top"
                           FontFamily="Segoe UI Semibold" />
                    <Label Content="Max Bet/s: " Margin="73,114,200,0" FontSize="14.667" VerticalAlignment="Top"
                           FontFamily="Segoe UI Semibold" />
                    <ComboBox x:Name="cmbTheme" Margin="137,24,72,0" SelectionChanged="cmbTheme_SelectionChanged"
                              VerticalAlignment="Top" />
                    <ComboBox x:Name="cmbAccent" Margin="137,71,72,0" SelectionChanged="cmbAccent_SelectionChanged"
                              VerticalAlignment="Top" />
                    <CheckBox x:Name="chkDelay" ToolTip="Enable or disable bet delay" Margin="155,122,0,0" VerticalAlignment="Top" Checked="chkDelay_CheckedChanged" Unchecked="chkDelay_CheckedChanged"/>
                    <Controls:NumericUpDown x:Name="NumDelay" Minimum="0.01" Maximum="15" Interval="0.01"
                                            Margin="180,118,72,0" VerticalAlignment="Top" ValueChanged="NumDelay_ValueChanged" />
                </Grid>
            </Controls:Flyout>
            <Controls:Flyout x:Name="FlyoutCloudLoad" Position="Top" Height="425" Width="440" Theme="Inverse">
                <Grid>
                    <Label Content="Strategie:" Margin="10,10,270,0" VerticalAlignment="Top"/>
                    <Label Content="Name:" Margin="10,36,270,0" VerticalAlignment="Top"/>
                    <Label Content="Description:" Margin="10,62,270,0" VerticalAlignment="Top"/>
                    <Label Content="Min. Balance:" Margin="10,223,270,0" VerticalAlignment="Top"/>
                    <Label Content="Author:" Margin="10,249,270,0" VerticalAlignment="Top"/>
                    <Label Content="Statistics of Author:" Margin="10,275,237,0" VerticalAlignment="Top"/>
                    <Label Content="Total bets:" Margin="128,275,96,0" VerticalAlignment="Top"/>
                    <Label Content="Profit:" Margin="128,301,96,0" VerticalAlignment="Top"/>
                    <Label Content="Biggest Winning Streak:" Margin="128,327,96,0" VerticalAlignment="Top"/>
                    <Label Content="Biggest Losing Streak:" Margin="128,353,96,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="cmbCloudStrategies" Margin="95,10,10,0" VerticalAlignment="Top" SelectionChanged="cmbCloudStrategies_SelectionChanged"/>
                    <Label x:Name="lblCloudName" Margin="95,36,10,0" VerticalAlignment="Top"/>
                    <TextBlock x:Name="lblCloudDescription" Margin="95,67,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="156"/>
                    <Label x:Name="lblCloudMinBalance" Margin="98,223,10,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblCloudAuthor" Margin="98,249,10,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblCloudTotalBets" Margin="269,275,10,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblCloudProfit" Margin="269,301,10,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblCloudWinStreak" Margin="269,327,10,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblCloudLossStreak" Margin="269,353,10,0" VerticalAlignment="Top"/>
                    <Button x:Name="btnCloudLoadStrat" Content="LOAD THIS STRATEGIE" IsEnabled="False" Margin="10,0,10,10" VerticalAlignment="Bottom" Click="btnCloudLoadStrat_Click"/>
                </Grid>
            </Controls:Flyout>
            <Controls:Flyout x:Name="FlyoutCloudUpload" Position="Top" Height="290" Width="440" Theme="Inverse">
                <Grid>
                    <Label Content="Strat Name:" Margin="10,10,270,0" VerticalAlignment="Top"/>
                    <Label Content="Description:" Margin="10,41,270,0" VerticalAlignment="Top"/>
                    <Label Content="Min. Balance:" Margin="10,217,270,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TxtCloudUploadName" Height="23" Margin="95,11,10,0" TextWrapping="Wrap" MaxLength="20" VerticalAlignment="Top"/>
                    <TextBox x:Name="TxtCloudUploadDescription" Height="170" Margin="95,42,10,0" TextWrapping="Wrap" MaxLength="400" VerticalAlignment="Top"/>
                    <Controls:NumericUpDown x:Name="NumCloudUploadMinBalance" Value="0.00000001" Minimum="0.00000001" Maximum="1000" Interval="0.00000001" StringFormat="0.00000000" Margin="95,217,10,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="255"/>
                    <Button x:Name="btnUploadStrat" Content="UPLOAD STRATEGIE" Margin="10,0,10,10" Height="25" VerticalAlignment="Bottom" Click="btnUploadStrat_Click"/>
                </Grid>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200*" MinHeight="234" MaxHeight="234"/>
            <RowDefinition Height="300*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450" MaxWidth="450"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="27*" MaxWidth="250"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" Margin="0,0,0,0" Grid.RowSpan="2">
            <Grid Margin="0">
                <TabControl Margin="0">
                    <TabItem Header="Strategies">
                        <Grid Width="428">
                            <TabControl Margin="0" SelectionChanged="TabStrategies_SelectionChanged">
                                <TabItem x:Name="TabMartingale" Header="Martingale">
                                    <Grid>
                                        <GroupBox Header="Multiply on loss"  HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="250" Width="408" RenderTransformOrigin="0.5,0.5">
                                            <Grid Margin="0,12,0,0">
                                                <Label Content="Multiplier: " ToolTip="Upon a loss, the next bet will be multiplied by X" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" HorizontalContentAlignment="Right" Margin="0,-15,0,0"/>
                                                <Controls:NumericUpDown x:Name="NumMultiplierLoss" Value="2" Minimum="0.1" Maximum="1000000" Interval="0.01" Margin="82,-15,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="104" ValueChanged="NumMultiplierLoss_ValueChanged"/>
                                                <RadioButton x:Name="RadMaxLoss" Content="Max" ToolTip="This will limit the maximum amount of loss in a row to multiply" HorizontalAlignment="Left" Margin="210,-11,0,0" VerticalAlignment="Top" GroupName="GroupModeLoss" Checked="AllLossRadioButtons_CheckedChanged"/>
                                                <RadioButton x:Name="RadVariableLoss" Content="Variable" ToolTip="This will multiply the multiplier given the next settings" HorizontalAlignment="Left" Margin="291,-11,0,0" VerticalAlignment="Top" GroupName="GroupModeLoss" Checked="AllLossRadioButtons_CheckedChanged"/>
                                                <RadioButton x:Name="RadConstrantLoss" Content="Constant" ToolTip="This will multiply forever" HorizontalAlignment="Left" Margin="210,20,0,0" VerticalAlignment="Top" GroupName="GroupModeLoss" IsChecked="True" Checked="AllLossRadioButtons_CheckedChanged"/>
                                                <RadioButton x:Name="RadChangeOnceLoss" Content="Change Once" ToolTip="This will multiply the multiplier ONLY ONCE given the next settings" HorizontalAlignment="Left" Margin="291,20,0,0" VerticalAlignment="Top" GroupName="GroupModeLoss" Checked="AllLossRadioButtons_CheckedChanged"/>
                                                <Label Content="Max Multiplies: " ToolTip="In a losing streak, the bet will be multiplied until the streak reaches X. The next bets will be with the same amount" HorizontalAlignment="Left" Margin="-9,16,0,0" VerticalAlignment="Top" Width="91" HorizontalContentAlignment="Right"/>
                                                <Controls:NumericUpDown x:Name="NumMaxMultipliesLoss" Value="15" Minimum="1" Maximum="999999" Interval="1" Margin="82,16,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="104" IsEnabled="False" ValueChanged="NumMaxMultipliesLoss_ValueChanged"/>
                                                <Label Content="After: " ToolTip="With every X loses in a row, the Multiplier will be multipied by Y" HorizontalAlignment="Left" Margin="0,47,0,0" VerticalAlignment="Top" Width="82" HorizontalContentAlignment="Right"/>
                                                <Controls:NumericUpDown x:Name="NumAfterLoss" Value="1" Minimum="1" Maximum="999999" Interval="1" Margin="82,47,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="104" IsEnabled="False" ValueChanged="NumAfterLoss_ValueChanged"/>
                                                <Controls:NumericUpDown x:Name="NumMultiplierAfterLoss" Value="1.0" Minimum="0.1" Maximum="1000000" Interval="0.01" Margin="296,47,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" IsEnabled="False" ValueChanged="NumMultiplierAfterLoss_ValueChanged"/>
                                                <Label Content="Losses, multiply by:" ToolTip="This is Y :P" HorizontalAlignment="Left" Margin="186,47,0,0" VerticalAlignment="Top" Width="110"/>
                                                <CheckBox x:Name="ChkAfterLossesInRowChangeBet" Content="After" HorizontalAlignment="Left" Margin="0,108,0,0" VerticalAlignment="Top" Checked="AllLossCheckBox_CheckedChanged" Unchecked="AllLossCheckBox_CheckedChanged"/>
                                                <CheckBox x:Name="ChkAfterLossesInRowChangeChance" Content="After" HorizontalAlignment="Left" Margin="0,139,0,0" VerticalAlignment="Top" Checked="AllLossCheckBox_CheckedChanged" Unchecked="AllLossCheckBox_CheckedChanged"/>
                                                <CheckBox x:Name="ChkReturnBaseBetAfterFirstLoss" Content="Return to Base bet after first loss" HorizontalAlignment="Left" Margin="0,166,0,0" VerticalAlignment="Top" Checked="AllLossCheckBox_CheckedChanged" Unchecked="AllLossCheckBox_CheckedChanged"/>
                                                <Controls:NumericUpDown x:Name="NumAfterXLossesInRowChangeBet" Value="2" Minimum="2" Maximum="99" Interval="1" Margin="55,104,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" IsEnabled="False" ValueChanged="NumAfterXLossesInRowChangeBet_ValueChanged"/>
                                                <Controls:NumericUpDown x:Name="NumAfterXLossesInRowChangeChance" Value="2" Minimum="2" Maximum="99" Interval="1" Margin="55,135,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" IsEnabled="False" ValueChanged="NumAfterXLossesInRowChangeChance_ValueChanged"/>
                                                <Label Content="Losses in row change bet to:" HorizontalAlignment="Left" Margin="125,104,0,0" VerticalAlignment="Top" Width="157"/>
                                                <Controls:NumericUpDown x:Name="NumAfterXLossesInRowChangeBetNumber" Value="0.00000001" Minimum="0.00000001" Maximum="1" Interval="0.00000001" StringFormat="0.00000000" Margin="282,104,0,0" VerticalAlignment="Top" IsEnabled="False" ValueChanged="NumAfterXLossesInRowChangeBetNumber_ValueChanged"/>
                                                <Controls:NumericUpDown x:Name="NumAfterXLossesInRowChangeChanceNumber" Value="49.50" Minimum="0.01" Maximum="98" Interval="0.01" Margin="306,135,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="90" IsEnabled="False" ValueChanged="NumAfterXLossesInRowChangeChanceNumber_ValueChanged"/>
                                                <Label Content="Losses in row change chance to:" HorizontalAlignment="Left" Margin="125,135,0,0" VerticalAlignment="Top" Width="191"/>
                                                <Button x:Name="BtnCheckMartingale" Content="Check Strat" ToolTip="This will simulate losses in a row and calculate how much you can hold on" HorizontalAlignment="Right" Width="75" Height="25" VerticalAlignment="Bottom" Click="BtnCheckMartingale_Click"/>
                                                <CheckBox x:Name="ChkMultiplyOnlyOneTimeLoss" Content="Multiply only one time and return to base multiplier (Variable Only)" HorizontalAlignment="Left" Margin="0,81,0,0" VerticalAlignment="Top" Checked="ChkMultiplyOnlyOneTimeLoss_CheckedChanged" Unchecked="ChkMultiplyOnlyOneTimeLoss_CheckedChanged" IsEnabled="False"/>

                                            </Grid>

                                        </GroupBox>
                                        <GroupBox Header="Multiply on win"  HorizontalAlignment="Left" Margin="10,265,0,0" VerticalAlignment="Top" Height="250" Width="408" RenderTransformOrigin="0.5,0.5">
                                            <Grid Margin="0,12,0,0">
                                                <Label Content="Multiplier: " ToolTip="Upon a won, the next bet will be multiplied by X" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" HorizontalContentAlignment="Right"/>
                                                <Controls:NumericUpDown x:Name="NumMultiplierWon" Value="1.0" Minimum="0.1" Maximum="1000000" Interval="0.01" Margin="82,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="104" ValueChanged="NumMultiplierWon_ValueChanged"/>
                                                <RadioButton x:Name="RadMaxWon" Content="Max" ToolTip="This will limit the maximum amount of wons in a row to multiply" HorizontalAlignment="Left" Margin="210,4,0,0" VerticalAlignment="Top" GroupName="GroupModeWon" Checked="AllWonRadioButtons_CheckedChanged"/>
                                                <RadioButton x:Name="RadVariableWon" Content="Variable" ToolTip="This will multiply the multiplier given the next settings" HorizontalAlignment="Left" Margin="291,4,0,0" VerticalAlignment="Top" GroupName="GroupModeWon" Checked="AllWonRadioButtons_CheckedChanged"/>
                                                <RadioButton x:Name="RadConstrantWon" Content="Constant" ToolTip="This will multiply forever" HorizontalAlignment="Left" Margin="210,35,0,0" VerticalAlignment="Top" GroupName="GroupModeWon" IsChecked="True" Checked="AllWonRadioButtons_CheckedChanged"/>
                                                <RadioButton x:Name="RadChangeOnceWon" Content="Change Once" ToolTip="This will multiply the multiplier ONLY ONCE given the next settings" HorizontalAlignment="Left" Margin="291,35,0,0" VerticalAlignment="Top" GroupName="GroupModeWon" Checked="AllWonRadioButtons_CheckedChanged"/>
                                                <Label Content="Max Multiplies: " ToolTip="In a winning streak, the bet will be multiplied until the streak reaches X. The next bets will be with the same amount" HorizontalAlignment="Left" Margin="0,31,0,0" VerticalAlignment="Top" Width="82" HorizontalContentAlignment="Right"/>
                                                <Controls:NumericUpDown x:Name="NumMaxMultipliesWon" Value="15" Minimum="1" Maximum="999999" Interval="1" Margin="82,31,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="104" IsEnabled="False" ValueChanged="NumMaxMultipliesWon_ValueChanged"/>
                                                <Label Content="After: " ToolTip="With every X wons in a row, the Multiplier will be multipied by Y" HorizontalAlignment="Left" Margin="0,62,0,0" VerticalAlignment="Top" Width="82" HorizontalContentAlignment="Right"/>
                                                <Controls:NumericUpDown x:Name="NumAfterWon" Value="1" Minimum="1" Maximum="999999" Interval="1" Margin="82,62,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="104" IsEnabled="False" ValueChanged="NumAfterWon_ValueChanged"/>
                                                <Controls:NumericUpDown x:Name="NumMultiplierAfterWon" Value="1.0" Minimum="0.1" Maximum="1000000" Interval="0.01" Margin="296,62,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" IsEnabled="False" ValueChanged="NumMultiplierAfterWon_ValueChanged"/>
                                                <Label Content="Wins, multiply by:" ToolTip="This is Y :P" HorizontalAlignment="Left" Margin="186,62,0,0" VerticalAlignment="Top" Width="110"/>
                                                <CheckBox x:Name="ChkAfterWonsInRowChangeBet" Content="After" HorizontalAlignment="Left" Margin="0,108,0,0" VerticalAlignment="Top" Checked="AllWonCheckBox_CheckedChanged" Unchecked="AllWonCheckBox_CheckedChanged"/>
                                                <CheckBox x:Name="ChkAfterWonsInRowChangeChance" Content="After" HorizontalAlignment="Left" Margin="0,139,0,0" VerticalAlignment="Top" Checked="AllWonCheckBox_CheckedChanged" Unchecked="AllWonCheckBox_CheckedChanged"/>
                                                <CheckBox x:Name="ChkReturnBaseBetAfterFirstWon" Content="Return to Base bet after first win" HorizontalAlignment="Left" Margin="0,166,0,0" VerticalAlignment="Top" Checked="AllWonCheckBox_CheckedChanged" Unchecked="AllWonCheckBox_CheckedChanged" IsChecked="True"/>
                                                <Controls:NumericUpDown x:Name="NumAfterXWonsInRowChangeBet" Value="2" Minimum="2" Maximum="99" Interval="1" Margin="55,104,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" IsEnabled="False" ValueChanged="NumAfterXWonsInRowChangeBet_ValueChanged"/>
                                                <Controls:NumericUpDown x:Name="NumAfterXWonsInRowChangeChance" Value="2" Minimum="2" Maximum="99" Interval="1" Margin="55,135,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" IsEnabled="False" ValueChanged="NumAfterXWonsInRowChangeChance_ValueChanged"/>
                                                <Label Content="Wins in row change bet to:" HorizontalAlignment="Left" Margin="125,104,0,0" VerticalAlignment="Top" Width="157"/>
                                                <Controls:NumericUpDown x:Name="NumAfterXWonsInRowChangeBetNumber" Value="0.00000001" Minimum="0.00000001" Maximum="1" Interval="0.00000001" StringFormat="0.00000000" Margin="282,104,0,0" VerticalAlignment="Top" IsEnabled="False" ValueChanged="NumAfterXWonsInRowChangeBetNumber_ValueChanged"/>
                                                <Controls:NumericUpDown x:Name="NumAfterXWonsInRowChangeChanceNumber" Value="49.50" Minimum="0.01" Maximum="98" Interval="0.01" Margin="306,135,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="90" IsEnabled="False" ValueChanged="NumAfterXWonsInRowChangeChanceNumber_ValueChanged"/>
                                                <Label Content="Wins in row change chance to:" HorizontalAlignment="Left" Margin="125,135,0,0" VerticalAlignment="Top" Width="191"/>

                                            </Grid>

                                        </GroupBox>
                                    </Grid>
                                </TabItem>
                                <TabItem x:Name="TabFibonacci" Header="Fibonacci">
                                    <Grid>
                                        <ListBox x:Name="lstFibonacci" HorizontalAlignment="Left" Height="327" Margin="10,36,0,0" VerticalAlignment="Top" Width="400" BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush}"/>
                                        <Label Content="This list is based on your Starting Bet:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="400"/>
                                        <GroupBox Header="On Loss" HorizontalAlignment="Left" Margin="10,368,0,0" VerticalAlignment="Top" Height="118" Width="197">
                                            <Grid>
